# Configuration for GitHub Copilot Analysis
# Copy this to config.json and fill in your values

{
  "github": {
    "token": "ghp_your_github_token_here",
    "organization": "your-org-name",
    "repositories": [
      "repo1",
      "repo2",
      "repo3"
